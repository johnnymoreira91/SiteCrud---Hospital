                  <a href="/adicionarrh">Adicionar</a>
                  <a href="/alterarrh">Alterar</a>
                </div>
              </li>
            <li class="dropdown">
              <a href="javascript:void(0)" class="dropbtn">Medico</a>
              <div class="dropdown-content">
                <a href="/consultarmedico">Consultar</a>
                <a href="/adicionarmedico">Adicionar</a>
                <a href="/alterarmedico">Alterar</a>
              </div>
            </li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">Enfermeira</a>
                <div class="dropdown-content">
                  <a href="/consultarenfermeira">Consultar</a>
                  <a href="/adicionarenfermeira">Adicionar</a>
